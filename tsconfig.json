{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ],
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
    },
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noStrictGenericChecks": true,

    "rootDir": ".",
    "outDir": "dist",
  },
  "exclude": [
    ".vscode",
    "node_modules/**",
    "./src/__test__/**",
    "./src/**/*.test.ts",
    "static"
  ],
}
